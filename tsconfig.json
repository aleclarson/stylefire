{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "./",
    "watch": false,
    "baseUrl": "src/",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/_tests"
  ]
}
